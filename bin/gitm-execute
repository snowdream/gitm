#!/usr/bin/env node


exports.execSync  = function (command) {
    var cp = require('child_process');
    var execSync = cp.execSync;
    var os = require('os');

    if (!command) {
        console.warn("command should not be null or empty.")
        return;
    }

    console.log(os.EOL);
    console.info("$ " + command);

    var out = execSync(command);
    console.info(out);
};

exports.exec = function (command) {
    var cp = require('child_process');
    var exec = cp.exec;
    var os = require('os');

    if (!command) {
        console.warn("command should not be null or empty.")
        return;
    }

    console.log(os.EOL);
    console.info("$ " + command);


    var child = exec(command);
    child.stdout.on('data', function (data) {
        console.info(data);
    });
    child.stderr.on('data', function (data) {
        console.info(data);
    });
    child.on('error', function (data) {
        console.info(data);
    });
};
